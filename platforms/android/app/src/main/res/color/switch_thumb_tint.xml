<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Enabled & checked (on state) -->
    <item android:color="?attr/colorOnPrimary" android:state_checked="true" android:state_enabled="true" />
    
    <!-- Enabled & UNchecked (off state) - this fixes the grey thumb issue -->
    <item android:color="?attr/colorOutline" android:state_checked="false" android:state_enabled="true" />
    
    <!-- Disabled states (optional) -->
    <item android:color="?attr/colorOnSurfaceVariant" android:state_checked="true" />
    <item android:color="?attr/colorOnSurfaceVariant" />
</selector>