<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark theme background (matches OSRS dark theme) -->
    <item>
        <shape>
            <solid android:color="#2B2B2B" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Mock page header (Varrock title area) -->
    <item 
        android:top="6dp"
        android:left="8dp"
        android:right="8dp"
        android:height="16dp">
        <shape>
            <solid android:color="#6B4B00" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <!-- Mock collapsed table (compact representation) -->
    <item 
        android:top="28dp"
        android:left="12dp"
        android:right="12dp"
        android:height="8dp">
        <shape>
            <solid android:color="#3A3A3A" />
            <stroke android:width="1dp" android:color="#B8860B" />
            <corners android:radius="1dp" />
        </shape>
    </item>
    
    <!-- Collapsed indicator (small arrow/line) -->
    <item 
        android:top="30dp"
        android:left="16dp"
        android:right="100dp"
        android:height="4dp">
        <shape>
            <solid android:color="#DAA520" />
        </shape>
    </item>
    
    <!-- Mock article text lines (shorter for collapsed state) -->
    <item 
        android:top="42dp"
        android:left="12dp"
        android:right="20dp"
        android:height="2dp">
        <shape>
            <solid android:color="#CCCCCC" />
        </shape>
    </item>
    
    <item 
        android:top="48dp"
        android:left="12dp"
        android:right="32dp"
        android:height="2dp">
        <shape>
            <solid android:color="#CCCCCC" />
        </shape>
    </item>
    
    <!-- Another collapsed table -->
    <item 
        android:top="56dp"
        android:left="12dp"
        android:right="12dp"
        android:height="8dp">
        <shape>
            <solid android:color="#3A3A3A" />
            <stroke android:width="1dp" android:color="#B8860B" />
            <corners android:radius="1dp" />
        </shape>
    </item>
    
    <!-- Second collapsed indicator -->
    <item 
        android:top="58dp"
        android:left="16dp"
        android:right="90dp"
        android:height="4dp">
        <shape>
            <solid android:color="#DAA520" />
        </shape>
    </item>
    
    <!-- More mock content -->
    <item 
        android:top="70dp"
        android:left="12dp"
        android:right="28dp"
        android:height="2dp">
        <shape>
            <solid android:color="#CCCCCC" />
        </shape>
    </item>
    
    <item 
        android:top="76dp"
        android:left="12dp"
        android:right="44dp"
        android:height="2dp">
        <shape>
            <solid android:color="#CCCCCC" />
        </shape>
    </item>
    
    <!-- Bottom content area -->
    <item 
        android:top="88dp"
        android:left="12dp"
        android:right="16dp"
        android:bottom="12dp">
        <shape>
            <solid android:color="#404040" />
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="#5A5A5A" />
        </shape>
    </item>
</layer-list>