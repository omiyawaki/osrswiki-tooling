<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with horizontal gradient from light to dark -->
    <item>
        <shape>
            <gradient
                android:startColor="#FDF6E3"
                android:centerColor="#6B6B5B"
                android:endColor="#2B2B2B"
                android:type="linear"
                android:angle="0" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Mock app bar with gradient -->
    <item 
        android:top="4dp"
        android:left="4dp"
        android:right="4dp"
        android:height="12dp">
        <shape>
            <gradient
                android:startColor="#8B6914"
                android:endColor="#6B4B00"
                android:type="linear"
                android:angle="0" />
        </shape>
    </item>
    
    <!-- Mock content area with gradient -->
    <item 
        android:top="20dp"
        android:left="8dp"
        android:right="8dp"
        android:bottom="16dp">
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#6B6B6B"
                android:endColor="#3A3A3A"
                android:type="linear"
                android:angle="0" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <!-- Mock bottom navigation with gradient -->
    <item 
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:height="10dp">
        <shape>
            <gradient
                android:startColor="#F5F5F5"
                android:endColor="#404040"
                android:type="linear"
                android:angle="0" />
        </shape>
    </item>
    
    <!-- Central divider line -->
    <item 
        android:left="59dp"
        android:right="59dp">
        <shape>
            <solid android:color="#999999" />
        </shape>
    </item>
</layer-list>