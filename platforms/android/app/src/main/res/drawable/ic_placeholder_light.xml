<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Light theme background -->
    <item>
        <shape>
            <solid android:color="#FDF6E3" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Mock app bar -->
    <item 
        android:top="4dp"
        android:left="4dp"
        android:right="4dp"
        android:height="12dp">
        <shape>
            <solid android:color="#8B6914" />
        </shape>
    </item>
    
    <!-- Mock content area -->
    <item 
        android:top="20dp"
        android:left="8dp"
        android:right="8dp"
        android:bottom="16dp">
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="#E0E0E0" />
        </shape>
    </item>
    
    <!-- Mock bottom navigation -->
    <item 
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:height="10dp">
        <shape>
            <solid android:color="#F5F5F5" />
        </shape>
    </item>
</layer-list>