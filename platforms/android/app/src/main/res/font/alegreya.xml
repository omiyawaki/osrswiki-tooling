<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Medium -->
    <font
        android:fontStyle="normal"
        android:fontWeight="500"
        android:font="@font/alegreya_medium" />
    <font
        android:fontStyle="italic"
        android:fontWeight="500"
        android:font="@font/alegreya_medium_italic" />
    
    <!-- SemiBold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="600"
        android:font="@font/alegreya_semibold" />
    <font
        android:fontStyle="italic"
        android:fontWeight="600"
        android:font="@font/alegreya_semibold_italic" />
    
    <!-- Bold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="700"
        android:font="@font/alegreya_bold" />
    <font
        android:fontStyle="italic"
        android:fontWeight="700"
        android:font="@font/alegreya_bold_italic" />
    
    <!-- ExtraBold -->
    <font
        android:fontStyle="normal"
        android:fontWeight="800"
        android:font="@font/alegreya_extrabold" />
    <font
        android:fontStyle="italic"
        android:fontWeight="800"
        android:font="@font/alegreya_extrabold_italic" />
    
    <!-- Black -->
    <font
        android:fontStyle="normal"
        android:fontWeight="900"
        android:font="@font/alegreya_black" />
    <font
        android:fontStyle="italic"
        android:fontWeight="900"
        android:font="@font/alegreya_black_italic" />
</font-family>