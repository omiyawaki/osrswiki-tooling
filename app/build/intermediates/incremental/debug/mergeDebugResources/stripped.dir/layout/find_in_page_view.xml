<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/find_in_page_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:imeOptions="actionSearch|flagNoExtractUi"
        android:inputType="text"
        android:maxWidth="9999dp"
        app:iconifiedByDefault="false"
        app:queryHint="@string/find_in_page_hint"
        app:searchIcon="@null" />

    <TextView
        android:id="@+id/find_in_page_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="?attr/colorOnSurface"
        android:textAppearance="@style/AppTextAppearance.BodyMedium" />

    <ImageButton
        android:id="@+id/find_in_page_prev"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/find_in_page_previous"
        android:src="@drawable/ic_keyboard_arrow_up" />

    <ImageButton
        android:id="@+id/find_in_page_next"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/find_in_page_next"
        android:src="@drawable/ic_keyboard_arrow_down" />

</LinearLayout>
