<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- checked state - use primary color for border -->
    <item android:color="?attr/colorPrimary" android:state_checked="true" android:state_enabled="true" />
    
    <!-- unchecked state - use outline color for border -->
    <item android:color="?attr/colorOutline" android:state_checked="false" android:state_enabled="true" />
    
    <!-- disabled state (optional) -->
    <item android:color="?attr/colorOnSurfaceVariant" android:state_enabled="false" />
</selector>