<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark theme background -->
    <item>
        <shape>
            <solid android:color="#2B2B2B" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Mock app bar -->
    <item 
        android:top="4dp"
        android:left="4dp"
        android:right="4dp"
        android:height="12dp">
        <shape>
            <solid android:color="#6B4B00" />
        </shape>
    </item>
    
    <!-- Mock content area -->
    <item 
        android:top="20dp"
        android:left="8dp"
        android:right="8dp"
        android:bottom="16dp">
        <shape>
            <solid android:color="#3A3A3A" />
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="#4F4F4F" />
        </shape>
    </item>
    
    <!-- Mock bottom navigation -->
    <item 
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:height="10dp">
        <shape>
            <solid android:color="#404040" />
        </shape>
    </item>
</layer-list>